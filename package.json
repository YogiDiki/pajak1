{
  "name": "taxonomy-knowledge-hub",
  "version": "1.0.0",
  "description": "Platform edukasi dan informasi terdepan untuk pajak, ekonomi, bisnis, dan investasi",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && go run main.go",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && go build -o bin/server main.go",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && ./bin/server",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download",
    "install:all": "npm run install:backend && npm run install:frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && go test ./...",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && golangci-lint run",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && go fmt ./...",
    "format:frontend": "cd frontend && npm run format"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "taxonomy",
    "knowledge",
    "hub",
    "pajak",
    "ekonomi",
    "bisnis",
    "investasi",
    "edukasi",
    "go",
    "react",
    "tailwind"
  ],
  "author": "Taxonomy Knowledge Hub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/taxonomy-knowledge-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/taxonomy-knowledge-hub/issues"
  },
  "homepage": "https://taxonomyhub.com"
} 